{
    "manifest_version": 2,
    "name": "URLs saver",
    "version": "1.0.0",
    "description": "Save URL of all open tabs",
    "permissions": ["tabs", "notifications"],

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "favicon.png"
    },

    "commands": {
        "_execute_browser_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+F",
            "mac": "MacCtrl+Shift+F"
          },
          "description": "Opens popup.html"
        }
    }
}